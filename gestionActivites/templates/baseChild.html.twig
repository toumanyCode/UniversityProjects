<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    {% block stylesheets %}
        {{ encore_entry_link_tags('app') }}
    {% endblock %}

    {% block javascripts %}
        {{ encore_entry_script_tags('app') }}
    {% endblock %}
</head>
<body>

<nav class="navbar navbar-expand-lg navbar-dark bg-dark">
    <div class="container-fluid">
        <img src="{{ asset('pictures/activity_logo.png') }}" alt="" width="60" height="48" class="d-inline-block align-text-top">
        <a class="navbar-brand" href="{{ path('activity_index_child') }}">ACTIVITY</a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav me-auto mb-2 mb-lg-0">

            </ul>
            {% if app.user %}
                <div class="bg-dark p-4">
                    <span class="text-muted">You are logged in as {{ app.user.username }}</span>
                    <a class="btn btn-outline-success" href="{{ path('app_logout') }}">Logout Here</a>
                </div>
            {% endif %}

        </div>
    </div>
</nav>
{% block body %}{% endblock %}
</body>
</html>
